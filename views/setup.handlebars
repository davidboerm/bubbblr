<div class="setup-card col-md-6 mx-auto">
  <div class="row">
      <div class="mx-auto welcome">
          <h2>Welcome, {{name}}!</h2>
      </div>
  </div>
  <div class="card my-auto">
      <div class="card-body">
          <form class="form new-project-form mt-2">
              <h4>Create a new Project</h4>

              <div class="form-floating">
                  <input class="form-input form-control mb-2" type="text" id="project-name" />
                  <label for="project-name">Project Name</label>

              </div>
              <div class="form-floating">
                  <textarea class="form-input form-control project-desc mb-4" id="project-desc"
                      name="project-desc"></textarea>
                  <label for="project-desc">Description</label>

              </div>
              <h5>Generate Tags</h5>
              <div class="form-floating">
                  <input class="form-input form-control" type="text" id="tag-input" name="tag-input" />
                  <label for="tag-input">Submit after each entry - 6 max</label>

              </div>
              <div class="form-group">
                  <button type="button" class="btn btn-primary mt-2 mb-4 tag-submit" id="tagSubmit">Submit</button>
              </div>
              <h5>Invite Team Members</h5>
              
              <div class="form-floating">
                  <textarea class="form-input form-control" type="text" id="team-mbr-input" name="team-mbr-input"></textarea>
                  <label for="team-mbr-input">Enter emails, comma separated</label>
              </div>
              <div class="form-group mt-2">
                  <button type="submit" class="btn btn-primary team-mbr-submit">Submit</button>
              </div>
          </form>
      </div>
  </div>
</div>
