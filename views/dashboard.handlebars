<div class="card p-4">
  <div class="card-body row">
    <h3 class="card-title mb-3">New Project</h3>
    <a href="#" class="btn btn-primary">Create New Project</a>
  </div>
  <hr>
  <h3 class="mb-3 px-3">Past Projects</h3>
  <div class="row">
    
    {{#each projects as |project|}}

    <div class="card m-1 col-3 project-cards">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{description}}</p>
        <a href="/project/{{id}}" class="btn btn-primary btn-sm mb-1">Join Chat</a>
        <a href="/outline/{{id}}" class="btn btn-primary btn-sm">View Outline</a>
      </div>
    </div>

    {{/each}}
    
  </div>
</div>